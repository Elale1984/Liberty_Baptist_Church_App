<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/view_EventItem"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/rounded_corner_view">

    <TextView
        android:id="@+id/tv_EventItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="August 12, 1984"
        android:textColor="@color/purple_500"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_EventItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/tv_EventItemDate"
        android:text="Go To Church"
        android:textColor="@color/colorDarkGrey"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_StartTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_EventItemDate"
        android:text="@string/start"
        android:textSize="16sp"
        android:layout_marginStart="30dp"
        android:textStyle="italic"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tv_EndTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_EventItemName"
        android:layout_toEndOf="@+id/tv_EventItemStartTime"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:text="@string/end"
        android:layout_marginStart="15dp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/tv_EventItemStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_EventItemDate"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tv_StartTimeLabel"
        android:text="8:30 pm"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_EventItemEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_EventItemDate"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tv_EndTimeLabel"
        android:text="10:30 pm"
        android:textSize="16sp"
        android:textStyle="italic" />

</RelativeLayout>
